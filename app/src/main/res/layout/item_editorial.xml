<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/grid_2"
  android:background="@drawable/rect_white_rounded"
  android:backgroundTint="@color/blue_darken_10"
  android:orientation="vertical"
  android:padding="@dimen/grid_3">

  <TextView
    android:id="@+id/editorial_title"
    style="@style/Title2WhiteMedium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/grid_2"
    tools:text="Going rewardless is rewarding" />

  <TextView
    android:id="@+id/editorial_description"
    style="@style/BodyWhite"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/grid_11"
    tools:text="Find projects that speak to you" />

</LinearLayout>
