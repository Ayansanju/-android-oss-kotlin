<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/project_search_result_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/kds_transparent"
    android:focusable="true"
    android:foreground="@drawable/click_indicator_light"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/search_padding_x"
    android:paddingTop="@dimen/search_padding_x">

  <ImageView
      android:id="@+id/project_image_view"
      android:layout_width="@dimen/search_result_photo_width"
      android:layout_height="@dimen/search_result_photo_height"
      android:layout_gravity="center_vertical"
      android:layout_marginStart="@dimen/grid_1"
      android:adjustViewBounds="true"
      android:background="@drawable/gray_gradient"
      android:scaleType="centerCrop"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/project_name_text_view"
      app:layout_constraintBottom_toBottomOf="@id/search_result_percent_funded_text_view"
      tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/search_result_coming_soon"
        style="@style/Caption1PrimaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Coming_soon"
        android:textColor="@color/kds_create_700"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/project_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/project_name_text_view"
        tools:visibility="visible" />

  <TextView
      android:id="@+id/project_name_text_view"
      style="@style/BodyPrimaryMedium"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="@dimen/grid_2"
      android:ellipsize="end"
      android:maxLines="2"
      app:layout_constraintBottom_toTopOf="@+id/search_result_percent_funded_text_view"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/project_image_view"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_chainStyle="packed"
      app:layout_constraintVertical_bias="0.5"
      tools:text="Somebody Once Told Me" />

  <TextView
      android:id="@+id/search_result_percent_funded_text_view"
      style="@style/Caption1PrimaryMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginVertical="@dimen/grid_2"
      android:textColor="@color/kds_create_700"
      android:textStyle="bold"
      tools:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="@+id/project_name_text_view"
      app:layout_constraintTop_toBottomOf="@+id/project_name_text_view"
      tools:text="10,000%" />

  <TextView
      android:id="@+id/search_result_funded_text_view"
      style="@style/Caption1Secondary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/grid_1_half"
      app:layout_constraintStart_toEndOf="@+id/search_result_percent_funded_text_view"
      app:layout_constraintTop_toTopOf="@+id/search_result_percent_funded_text_view"
      tools:text="funded" />

  <TextView
      android:id="@+id/search_result_deadline_countdown_text_view"
      style="@style/Caption1PrimaryMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/grid_2"
      android:layout_marginEnd="@dimen/grid_1_half"
      app:layout_constraintStart_toEndOf="@+id/search_result_funded_text_view"
      app:layout_constraintTop_toTopOf="@+id/search_result_percent_funded_text_view"
      tools:text="25" />

  <TextView
      android:id="@+id/search_result_deadline_unit_text_view"
      style="@style/Caption1Secondary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/grid_1_half"
      android:layout_marginEnd="@dimen/grid_2"
      android:ellipsize="end"
      android:maxLines="1"
      app:layout_constraintStart_toEndOf="@+id/search_result_deadline_countdown_text_view"
      app:layout_constraintTop_toTopOf="@+id/search_result_deadline_countdown_text_view"
      tools:text="days to go" />

  <include
      android:id="@+id/include"
      layout="@layout/horizontal_line_1dp_view"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="@dimen/grid_2"
      app:layout_constraintBottom_toBottomOf="parent" />

  <androidx.constraintlayout.widget.Group
      android:id="@+id/search_result_group"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:constraint_referenced_ids="search_result_percent_funded_text_view,search_result_funded_text_view,search_result_deadline_countdown_text_view,search_result_deadline_unit_text_view"
      tools:layout_editor_absoluteX="12dp"
      tools:layout_editor_absoluteY="12dp"
      tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
