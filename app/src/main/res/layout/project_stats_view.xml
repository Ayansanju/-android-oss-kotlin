<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  tools:showIn="@layout/project_main_layout"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="horizontal">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="@dimen/grid_2"
    android:paddingRight="@dimen/grid_2"
    tools:ignore="RtlSymmetry">

    <TextView
      android:id="@+id/backers_count"
      style="@style/CalloutPrimaryMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
      android:importantForAccessibility="no"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/discovery_baseball_card_stats_backers"
      style="@style/Caption1Secondary" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="@dimen/grid_2"
    android:paddingRight="@dimen/grid_2"
    tools:ignore="RtlSymmetry">

    <TextView
      android:id="@+id/pledged"
      style="@style/CalloutPrimaryMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/goal"
      android:importantForAccessibility="no"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/Caption1Secondary" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="@dimen/grid_1_half"
    android:paddingRight="@dimen/grid_1_half"
    tools:ignore="RtlSymmetry">

    <TextView
      android:id="@+id/deadline_countdown_text_view"
      android:maxLines="1"
      style="@style/CalloutPrimaryMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
      android:id="@+id/deadline_countdown_unit_text_view"
      android:importantForAccessibility="no"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/Caption1Secondary" />

  </LinearLayout>

</LinearLayout>
