<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:id="@+id/filter_view"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginEnd="@dimen/grid_1"
  android:layout_marginStart="@dimen/grid_1"
  android:background="@drawable/click_indicator_light_masked"
  android:orientation="horizontal">

  <TextView
    android:id="@+id/filter_text_view"
    style="@style/BodySecondaryMedium"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_weight="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/grid_3_half"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:text="Art" />

  <FrameLayout
    android:layout_width="@dimen/grid_8"
    android:layout_height="@dimen/grid_8">

    <com.kickstarter.ui.views.IconButton
      android:id="@+id/expand_button"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="@string/keyboard_arrow_down_icon"
      android:textColor="@color/ksr_dark_grey_500"
      android:textSize="@dimen/icon" />

    <com.kickstarter.ui.views.IconButton
      android:id="@+id/collapse_button"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="@string/keyboard_arrow_up_icon"
      android:textColor="@color/ksr_dark_grey_500"
      android:textSize="@dimen/icon" />

  </FrameLayout>


</LinearLayout>
