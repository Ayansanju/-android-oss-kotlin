<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/thanks_project_view"
  android:focusable="true"
  android:layout_width="@dimen/thanks_project_photo_width"
  android:layout_height="@dimen/thanks_project_photo_height"
  card_view:cardElevation="0dp"
  card_view:cardCornerRadius="@dimen/card_corner_radius"
  card_view:cardBackgroundColor="@android:color/transparent"
  android:layout_marginLeft="@dimen/grid_1"
  android:layout_marginRight="@dimen/grid_1">

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/photo"
      android:scaleType="centerCrop"
      android:adjustViewBounds="true"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:ignore="ContentDescription" />

    <TextView
      android:id="@+id/time_to_go_text_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/grid_1"
      android:layout_marginStart="@dimen/grid_1"
      android:paddingTop="1dp"
      android:paddingBottom="1dp"
      android:paddingLeft="@dimen/grid_1"
      android:paddingRight="@dimen/grid_1"
      android:background="@color/yellow"
      android:gravity="center"
      android:textColor="@color/text_dark"
      android:textSize="12sp" />

    <RelativeLayout
      android:id="@+id/photo_gradient"
      android:layout_width="match_parent"
      android:layout_height="@dimen/grid_7"
      android:layout_alignLeft="@+id/photo"
      android:layout_alignStart="@+id/photo"
      android:layout_alignBottom="@+id/photo"
      android:background="@drawable/photo_gradient">

      <TextView
        android:id="@+id/name"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/grid_1"
        android:layout_marginRight="@dimen/grid_1"
        android:layout_marginBottom="@dimen/grid_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/caption_1" />

    </RelativeLayout>

  </RelativeLayout>

</android.support.v7.widget.CardView>
