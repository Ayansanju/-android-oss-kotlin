<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="@dimen/grid_12"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/credit_card_logo"
    android:layout_width="@dimen/credit_card_logo_width"
    android:layout_height="@dimen/credit_card_logo_height"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:contentDescription="@null"
    android:scaleType="fitXY"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@drawable/amex_md" />

  <TextView
    android:id="@+id/credit_card_last_four_digits"
    style="@style/TextPrimary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/payment_methods_list_item_8dp"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:textSize="@dimen/callout"
    app:layout_constraintEnd_toStartOf="@+id/delete_card"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/credit_card_logo"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Card ending in xxxx" />

  <TextView
    android:id="@+id/credit_card_expiration_date"
    style="@style/TextSecondary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/payment_methods_list_item_8dp"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/payment_methods_list_item_8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/delete_card"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/credit_card_logo"
    app:layout_constraintTop_toTopOf="@+id/credit_card_last_four_digits"
    app:layout_constraintVertical_bias="0.619"
    tools:text="Expires 03/19" />

  <ImageView
    android:id="@+id/delete_card"
    android:layout_width="@dimen/delete_card_image_width"
    android:layout_height="@dimen/delete_card_image_height"
    android:layout_marginBottom="@dimen/payment_methods_list_item_8dp"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/delete_card_image_margin_top"
    android:contentDescription="@null"
    android:scaleType="fitXY"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias=".5"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"
    android:background="@drawable/icon_trash" />

</android.support.constraint.ConstraintLayout>
