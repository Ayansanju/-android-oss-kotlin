<?xml version="1.0" encoding="utf-8"?>
<com.kickstarter.ui.toolbars.KSToolbar
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/message_threads_toolbar"
  android:elevation="0dp"
  android:layout_height="wrap_content"
  android:layout_width="match_parent"
  app:contentInsetLeft="0dp"
  app:contentInsetStart="0dp"
  app:layout_collapseMode="pin"
  app:layout_scrollFlags="enterAlways"
  tools:showIn="@layout/message_threads_layout"
  tools:ignore="UnusedAttribute">

  <com.kickstarter.ui.views.IconButton
    style="@style/ToolbarIcon"
    android:id="@+id/back_button"
    android:focusable="true"
    android:layout_height="@dimen/button_icon_fixed_width"
    android:layout_width="@dimen/button_icon_fixed_width"
    android:contentDescription="@string/general_navigation_accessibility_button_navigate_back_label"
    android:text="@string/arrow_back_icon" />

  <LinearLayout
    android:id="@+id/message_threads_collapsed_toolbar_title"
    android:animateLayoutChanges="true"
    android:visibility="invisible"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
      style="@style/Headline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/messages_navigation_inbox"/>

    <TextView
      android:id="@+id/message_threads_toolbar_unread_count_text_view"
      style="@style/Headline"
      android:layout_marginStart="@dimen/grid_new_1"
      android:layout_marginEnd="@dimen/grid_new_1"
      android:textColor="@color/ksr_blue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="(3)"/>

  </LinearLayout>

</com.kickstarter.ui.toolbars.KSToolbar>
