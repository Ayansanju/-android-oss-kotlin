<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.kickstarter"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

  <!-- Strip away maxSdkVersion -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
      tools:remove="android:maxSdkVersion"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
      tools:remove="android:minSdkVersion"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
      tools:remove="android:maxSdkVersion"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
      tools:remove="android:minSdkVersion"/>

  <!-- Add the permission with no maxSdkVersion defined -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

  <application>
    <activity android:name=".ui.activities.InternalToolsActivity" />
    <activity android:name=".ui.activities.FeatureFlagsActivity"/>
    <activity android:name=".ui.activities.PlaygroundActivity" />
  </application>

</manifest>
